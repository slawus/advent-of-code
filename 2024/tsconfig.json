{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["ESNext"],
  },
  "include": ["**/*.ts"],
  "exclude": []
}
